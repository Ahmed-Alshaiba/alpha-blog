<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to "Alpha-Blog", root_path, class: "navbar-brand", id: "logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
    <% if logged_in? %>
        <li class="nav-item">
          <%= link_to "Bloggers", users_path, class: "nav-link"%>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Articles
          </a>
          <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">            
            <%= link_to 'Write an article', new_article_path, class: "dropdown-item" %>
            <%= link_to 'Preview all articles', articles_path, class: "dropdown-item" %>
          </div>
        </li>        
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Categories
          </a>
          <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">                      
            <% if current_user.admin? %>
              <%= link_to 'Add a new category', new_category_path, class: "dropdown-item" %>
            <% end %>
            <%= link_to 'Preview all categories', categories_path, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            My profile <%= "[Admin]" if current_user.admin? %>
          </a>
          <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">               
            <%= link_to 'Preview my profile', user_path(current_user), class: "dropdown-item" %>
            <%= link_to 'Edit my profile', edit_user_path(current_user), class: "dropdown-item" %>
            <%= link_to "Delete my profile", user_path(current_user), class: "dropdown-item text-danger", method: :delete, data: {confirm: "Are you sure?. This action will delete your account and all the articles you have written"} %>
            <%= link_to 'Logout', logout_path, class: "dropdown-item", method: :delete %>
          </div>
        </li>
      <% else %>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Log-in
          </a>
          <div class="dropdown-menu dark" aria-labelledby="navbarDropdown">               
            <%= link_to 'Log-in', login_path, class: "dropdown-item" %>
            <%= link_to "New here? Sign-up", signup_path, class: "dropdown-item"%>
          </div>
        </li>    
      <% end %>
      <li class="nav-item">
        <%= link_to "About", about_path, class: "nav-link"%>
