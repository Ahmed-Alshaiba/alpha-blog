<h1 class="page-name mt-4"><%= @user.username%>'s profile</h1>

<%= gravatar_for @user, size: 250 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-3"> 
    <%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-outline-warning" %>
  </div>
<% end %>

<h1 class="page-name mt-3">Articles</h1>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-3">
  <%= will_paginate @articles, :container => false %>
</div>