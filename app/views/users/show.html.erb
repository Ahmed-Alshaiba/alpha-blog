<h1 class="page-name mt-4"><%= @user.username%>'s profile</h1>

<%= gravatar_for @user, size: 250 %>

<% if logged_in? && @user == current_user %>
  <div class="text-center mt-3"> 
    <%= link_to "Edit my profile", edit_user_path(@user), class: "btn btn-warning" %>
    <%= link_to "Delete my profile", user_path(@user), class: "btn btn-danger", method: :delete, data: {confirm: "Are you sure you want to delete your account. This action will delete your account and all the articles you have written"} %>
  </div>
<% end %>

<h1 class="page-name mt-3">Articles</h1>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-3">
  <%= will_paginate @articles, :container => false %>
</div>