<div class="container">
  <%= render 'shared/errors', obj: @category %>
  <div class="jumbotron shadow p-3 mb-5 bg-gray rounded">
    <%= form_with(model: @category, local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter the category name" %>
        </div>
      </div>
      
      <div class="text-center">
        <%= f.submit class: "btn btn-outline-success shadow rounded" %>
      </div>
    <% end %>
  </div>
</div>